<section class="card-bg">

{{! Featured posts are displayed first }}
  {{^is "paged"}}
    {{#foreach posts}}
        {{#if featured}}
        <section class="recent card {{post_class}} {{#if @even}}even{{else}}odd{{/if}}">
            <span class="featured-label">{{t "Selection"}} <i class="fa fa-heart" aria-hidden="true"></i></span>
            <a href="{{url}}">
                <h2 class="post-title">{{{title}}}</h2>
                <div class="post-excerpt">
                    {{#if meta_description}}
                        <p>{{meta_description}}</p>
                    {{else}}
                        <p>{{excerpt words="36"}}…</p>
                    {{/if}}
                </div>
            </a>
            <footer class="post-meta">
                {{#primary_author}}
                    <a href="{{url}}">
                        {{#if profile_image}}
                            <div class="author-thumb" style="background-image:url({{img_url profile_image}});" alt="{{name}}'s picture" nopin="nopin"></div>
                        {{else}}
                            <i class="fa fa-user" aria-hidden="true"></i>
                        {{/if}}
                        <span>{{name}}</span>
                    </a>
                {{/primary_author}}
                <span><i class="fa fa-calendar" aria-hidden="true"></i> {{date format="DD MMMM YYYY"}}</span>
                {{#if tags}}
                <span class="tags"><i class="fa fa-tags" aria-hidden="true"></i> {{tags}}</span>
                {{/if}}
            </footer>
        </section>
        {{/if}}
    {{/foreach}}
  {{/is}}

  {{#foreach posts}}
    {{#unless featured}}
    <section class="recent card {{post_class}} {{#if @even}}even{{else}}odd{{/if}}">
        <a href="{{url}}">
            <h2 class="post-title">{{{title}}}</h2>
            <div class="post-excerpt">
                {{#if meta_description}}
                    <p>{{meta_description}}…</p>
                {{else}}
                    <p>{{excerpt words="36"}}…</p>
                {{/if}}
            </div>
        </a>
        <footer class="post-meta">
            {{#is "home, tag, paged"}}
            {{#primary_author}}
                <a href="{{url}}">
                    {{#if profile_image}}
                        <div class="author-thumb" style="background-image:url({{img_url profile_image}});" alt="{{name}}'s picture" nopin="nopin"></div>
                    {{else}}
                        <i class="fa fa-user" aria-hidden="true"></i>
                    {{/if}}
                    <span>{{name}}</span>
                </a>
            {{/primary_author}}
            {{/is}} 
            <span><i class="fa fa-calendar" aria-hidden="true"></i> {{date format="DD MMMM YYYY"}}</span>
            {{#if tags}}
            <span class="tags"><i class="fa fa-tags" aria-hidden="true"></i> {{tags}}</span>
            {{/if}}
        </footer>
    </section>
    {{/unless}}
  {{/foreach}}

    {{#if pagination.prev}}
      {{pagination}}
    {{else}}
        {{#if pagination.next}}
            {{pagination}}
        {{/if}}
    {{/if}}
</section>
